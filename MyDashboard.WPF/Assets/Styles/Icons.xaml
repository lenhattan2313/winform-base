<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Icon Font Family -->
    <FontFamily x:Key="IconFontFamily">Segoe MDL2 Assets</FontFamily>

    <!-- Common Icons as Text -->
    <sys:String x:Key="IconHome">&#xE80F;</sys:String>
    <sys:String x:Key="IconSettings">&#xE713;</sys:String>
    <sys:String x:Key="IconSearch">&#xE721;</sys:String>
    <sys:String x:Key="IconFilter">&#xE71C;</sys:String>
    <sys:String x:Key="IconRefresh">&#xE72C;</sys:String>
    <sys:String x:Key="IconSave">&#xE74E;</sys:String>
    <sys:String x:Key="IconCancel">&#xE711;</sys:String>
    <sys:String x:Key="IconEdit">&#xE70F;</sys:String>
    <sys:String x:Key="IconDelete">&#xE74D;</sys:String>
    <sys:String x:Key="IconAdd">&#xE710;</sys:String>
    <sys:String x:Key="IconAlarm">&#xE7E7;</sys:String>
    <sys:String x:Key="IconReport">&#xE7C3;</sys:String>
    <sys:String x:Key="IconChart">&#xE9D2;</sys:String>
    <sys:String x:Key="IconDownload">&#xE792;</sys:String>
    <sys:String x:Key="IconUpload">&#xE898;</sys:String>
    <sys:String x:Key="IconPrint">&#xE749;</sys:String>
    <sys:String x:Key="IconExport">&#xE792;</sys:String>
    <sys:String x:Key="IconImport">&#xE898;</sys:String>
    <sys:String x:Key="IconUser">&#xE77B;</sys:String>
    <sys:String x:Key="IconLock">&#xE72E;</sys:String>
    <sys:String x:Key="IconUnlock">&#xE785;</sys:String>
    <sys:String x:Key="IconInfo">&#xE946;</sys:String>
    <sys:String x:Key="IconWarning">&#xE7BA;</sys:String>
    <sys:String x:Key="IconError">&#xE783;</sys:String>
    <sys:String x:Key="IconSuccess">&#xE73E;</sys:String>
    <sys:String x:Key="IconCalendar">&#xE787;</sys:String>
    <sys:String x:Key="IconClock">&#xE121;</sys:String>
    <sys:String x:Key="IconLocation">&#xE81D;</sys:String>
    <sys:String x:Key="IconMail">&#xE715;</sys:String>
    <sys:String x:Key="IconPhone">&#xE717;</sys:String>

    <!-- Icon Style -->
    <Style x:Key="IconStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource IconFontFamily}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="IconButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource TemplatedParent}, FallbackValue=#E0E0E0}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4" 
                            Width="32" Height="32">
                        <TextBlock Text="{TemplateBinding Content}" 
                                 FontFamily="{StaticResource IconFontFamily}"
                                 FontSize="16"
                                 Foreground="{TemplateBinding Foreground}"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource SurfaceVariantBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

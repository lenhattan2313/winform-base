<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    <AssemblyTitle>MyDashboard.WPF</AssemblyTitle>
    <AssemblyDescription>WPF Dashboard Application</AssemblyDescription>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <!-- Resource Dictionaries -->
    <Resource Include="Assets\Styles\**\*.xaml" />
    
    <!-- Images -->
    <Resource Include="Assets\Images\**\*" />
    
    <!-- Icons -->
    <Resource Include="Assets\Icons\**\*" />
    
    <!-- Fonts -->
    <Resource Include="Assets\Fonts\**\*" />
    
    <!-- Data Files -->
    <Resource Include="Assets\Data\**\*" />
  </ItemGroup>

</Project>

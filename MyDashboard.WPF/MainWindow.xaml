<Window x:Class="MyDashboard.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:MyDashboard.WPF.Views"
        Title="Dashboard" Height="600" Width="900">
    <DockPanel>
        <!-- Navigation -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#EEE" Height="40">
            <Button Content="Alarm" Width="100" Margin="5" Click="Alarm_Click"/>
            <Button Content="Report" Width="100" Margin="5" Click="Report_Click"/>
            <Button Content="Setting" Width="100" Margin="5" Click="Setting_Click"/>
        </StackPanel>

        <!-- Content -->
        <ContentControl x:Name="ContentArea" />
    </DockPanel>
</Window>

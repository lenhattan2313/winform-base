<Window x:Class="MyDashboard.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:MyDashboard.WPF.Views"
        Title="Dashboard" Height="600" Width="900">
    <DockPanel>
        <!-- Navigation -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="{StaticResource SurfaceBrush}" Height="50">
            <Button Width="120" Margin="5" Click="Alarm_Click" Style="{StaticResource SecondaryButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{StaticResource IconAlarm}" Style="{StaticResource IconStyle}" Margin="0,0,8,0"/>
                    <TextBlock Text="Alarm"/>
                </StackPanel>
            </Button>
            <Button Width="120" Margin="5" Click="Report_Click" Style="{StaticResource SecondaryButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{StaticResource IconReport}" Style="{StaticResource IconStyle}" Margin="0,0,8,0"/>
                    <TextBlock Text="Report"/>
                </StackPanel>
            </Button>
            <Button Width="120" Margin="5" Click="Setting_Click" Style="{StaticResource SecondaryButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{StaticResource IconSettings}" Style="{StaticResource IconStyle}" Margin="0,0,8,0"/>
                    <TextBlock Text="Setting"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Content -->
        <ContentControl x:Name="ContentArea" />
    </DockPanel>
</Window>

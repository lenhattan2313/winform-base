<Window x:Class="MyDashboard.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:MyDashboard.WPF.Views"
        Title="Dashboard"         
        Width="1600"
        Height="900"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Navigation -->
        <Grid DockPanel.Dock="Top" Background="{StaticResource SurfaceBrush}" Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left side navigation buttons -->
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <Button x:Name="MainButton" Width="120" Margin="5" Click="Main_Click" Style="{StaticResource SecondaryButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Main"/>
                    </StackPanel>
                </Button>
                <Button x:Name="AlarmButton" Width="120" Margin="5" Click="Alarm_Click" Style="{StaticResource SecondaryButtonStyle}">
                    <TextBlock Text="Alarm"/>
                </Button>
                <Button x:Name="ReportButton" Width="120" Margin="5" Click="Report_Click" Style="{StaticResource SecondaryButtonStyle}">
                    <TextBlock Text="Report"/>
                </Button>
                <Button x:Name="SettingButton" Width="120" Margin="5" Click="Setting_Click" Style="{StaticResource SecondaryButtonStyle}">
                    <TextBlock Text="Setting"/>
                </Button>
            </StackPanel>
            
            <!-- Right side logout button -->
            <Button Grid.Column="1" 
                    Width="100" 
                    Margin="5" 
                    Click="Logout_Click" 
                    Style="{StaticResource SecondaryButtonStyle}"
                    HorizontalAlignment="Right">
                <TextBlock Text="Log out"/>
            </Button>
        </Grid>

        <!-- Content -->
        <ContentControl x:Name="ContentArea" />
    </DockPanel>
</Window>

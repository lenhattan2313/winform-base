<UserControl x:Class="MyDashboard.WPF.Views.Main.WeighingSystem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:MyDashboard.WPF.Converters"
             mc:Ignorable="d"
             MinWidth="160" MinHeight="180">

    <UserControl.Resources>
        <conv:IndicatorStateToBrushConverter x:Key="StateToBrush"/>
        <conv:ProgressToStarConverter x:Key="ProgressToStar"/>
        <conv:InverseProgressToStarConverter x:Key="InverseProgressToStar"/>
    </UserControl.Resources>

    <Border Background="{StaticResource BackgroundGrayBrush}" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="4" 
            Padding="8" 
            Margin="3">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="Auto"/>  <!-- System Runtime Row -->
                <RowDefinition Height="*"/>     <!-- Main Content Row -->
                <RowDefinition Height="Auto"/>  <!-- Barcode Row -->
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"  Margin="0,0,0,8">
                <TextBlock Text="{Binding Data.PlcName, RelativeSource={RelativeSource AncestorType=UserControl}}" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,2" FontSize="16"/>
            </Grid>
            <!-- Row 1: System Runtime -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Days" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                    <TextBox Text="{Binding Data.Days, RelativeSource={RelativeSource AncestorType=UserControl}}" Width="50" Height="24" FontSize="10" Padding="6,4" HorizontalAlignment="Center" 
                             TextAlignment="Center" IsReadOnly="True" Background="White"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Hours" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                    <TextBox Text="{Binding Data.Hours, RelativeSource={RelativeSource AncestorType=UserControl}}" Width="50" Height="24" FontSize="10" Padding="6,4" HorizontalAlignment="Center" 
                             TextAlignment="Center" IsReadOnly="True" Background="White"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Minutes" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                    <TextBox Text="{Binding Data.Minutes, RelativeSource={RelativeSource AncestorType=UserControl}}" Width="50" Height="24" FontSize="10" Padding="6,4" HorizontalAlignment="Center" 
                             TextAlignment="Center" IsReadOnly="True" Background="White"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="Seconds" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                    <TextBox Text="{Binding Data.Seconds, RelativeSource={RelativeSource AncestorType=UserControl}}" Width="50" Height="24" FontSize="10" Padding="6,4" HorizontalAlignment="Center" 
                             TextAlignment="Center" IsReadOnly="True" Background="White"/>
                </StackPanel>
            </Grid>
            
            <!-- Row 2: Main Content (3 Columns) -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>  <!-- Column 1: Data -->
                    <ColumnDefinition Width="*"/>  <!-- Column 2: Image -->
                    <ColumnDefinition Width="*"/>  <!-- Column 3: Status -->
                </Grid.ColumnDefinitions>
                
                <!-- Column 1: Data Fields -->
                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                    <StackPanel Margin="0,0,0,6">
                        <TextBlock Text="PreSet Bags" FontWeight="Bold" Margin="0,0,0,2"/>
                        <TextBox Text="100" Height="24" FontSize="10" Padding="6,4" Width="50" IsReadOnly="True" Background="White" HorizontalAlignment="Left"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,6">
                        <TextBlock Text="Weight bag" FontWeight="Bold" Margin="0,0,0,2"/>
                        <TextBox Text="1150.5" Height="24" FontSize="10" Padding="6,4" Width="50" IsReadOnly="True" Background="White" HorizontalAlignment="Left"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,6">
                        <TextBlock Text="Last weight" FontWeight="Bold" Margin="0,0,0,2"/>
                        <TextBox Text="1151" Height="24" FontSize="10" Padding="6,4" Width="50" IsReadOnly="True" Background="White" HorizontalAlignment="Left"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,6">
                        <TextBlock Text="Total bags" FontWeight="Bold" Margin="0,0,0,2"/>
                        <TextBox Text="5" Height="24" FontSize="10" Padding="6,4" Width="50" IsReadOnly="True" Background="White" HorizontalAlignment="Left"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,6">
                        <TextBlock Text="Total weight" FontWeight="Bold" Margin="0,0,0,2"/>
                        <TextBox Text="5,753" Height="24" FontSize="10" Padding="6,4" Width="50" IsReadOnly="True" Background="White" HorizontalAlignment="Left"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Column 2: Progress Bar and Images -->
                <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>  <!-- Progress Bar Column -->
                        <ColumnDefinition Width="*"/>   <!-- Images Column -->
                    </Grid.ColumnDefinitions>

                    <!-- Progress Bar -->
                    <Grid Grid.Column="0" Margin="0,0,8,0">
                        <Border Background="LightGray" CornerRadius="2"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="{Binding Progress, Converter={StaticResource InverseProgressToStar}}"/>
                                <RowDefinition Height="{Binding Progress, Converter={StaticResource ProgressToStar}}"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="1" 
                            Background="{StaticResource PrimaryBrush}" 
                            CornerRadius="2"/>
                        </Grid>
                    </Grid>

                    <!-- Stacked Images -->
                    <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- DB1 Image (Background) -->
                        <Image Source="pack://application:,,,/Assets/Images/UI/DB1.png" 
                               Width="150" Height="220"
                               Stretch="Uniform"/>
                        
                        <!-- Bag Image (Foreground, positioned at bottom) -->
                        <Image Source="pack://application:,,,/Assets/Images/UI/bag.png" 
                               Width="150" Height="100" VerticalAlignment="Bottom" Margin="0,0,4,10"
                               Stretch="Uniform"/>
                        
                        <!-- Number TextBox at top -->
                        <TextBox Text="800" Width="60" Height="24" FontSize="10" FontWeight="Bold"
                                 TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Center"
                                 Margin="0,10,0,0" Padding="6,4" IsReadOnly="True"
                                 BorderBrush="Gray" BorderThickness="1" Background="Black" Foreground="Yellow" />
                        
                        <!-- Green Rectangle at center -->
                        <Rectangle Width="34" Height="12" Fill="{StaticResource PrimaryGreenBrush}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,2,0"/>
                        
                        <!-- More Data Button between rectangle and bag -->
                        <!--<Button Content="More Data" Width="60" Height="18" FontSize="10" Foreground="Black"
                                HorizontalAlignment="Center" VerticalAlignment="Center" 
                                Margin="0,120,2,0" Padding="4,2"
                                Background="{StaticResource SurfaceBrush}" 
                                BorderBrush="Black"
                                BorderThickness="1">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="0">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>-->
                    </Grid>
                </Grid>
                
                <!-- Column 3: Status Indicators -->
                <StackPanel Grid.Row="1" Grid.Column="2" VerticalAlignment="Center">

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Ellipse Width="16" Height="16" 
                             Fill="{Binding Data.AutoManual, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StateToBrush}}"
                             Margin="0,0,6,0"/>
                        <TextBlock Text="Auto/Manual" VerticalAlignment="Center" FontSize="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Ellipse Width="16" Height="16" 
                             Fill="{Binding Data.Feed, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StateToBrush}}"
                             Margin="0,0,6,0"/>
                        <TextBlock Text="Feed" VerticalAlignment="Center" FontSize="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Ellipse Width="16" Height="16" 
                             Fill="{Binding Data.Discharge, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StateToBrush}}"
                             Margin="0,0,6,0"/>
                        <TextBlock Text="Discharge" VerticalAlignment="Center" FontSize="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Ellipse Width="16" Height="16" 
                             Fill="{Binding Data.ReleaseBag, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StateToBrush}}"
                             Margin="0,0,6,0"/>
                        <TextBlock Text="Release bag" VerticalAlignment="Center" FontSize="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Ellipse Width="16" Height="16" 
                             Fill="{Binding Data.Pause, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StateToBrush}}"
                             Margin="0,0,6,0"/>
                        <TextBlock Text="Pause state" VerticalAlignment="Center" FontSize="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Ellipse Width="16" Height="16" 
                             Fill="{Binding Data.Emergency, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StateToBrush}}"
                             Margin="0,0,6,0"/>
                        <TextBlock Text="Emergency" VerticalAlignment="Center" FontSize="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Ellipse Width="16" Height="16" 
                             Fill="{Binding Data.Tolerance, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StateToBrush}}"
                             Margin="0,0,6,0"/>
                        <TextBlock Text="Tolerance" VerticalAlignment="Center" FontSize="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Ellipse Width="16" Height="16" 
                             Fill="{Binding Data.Complete, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StateToBrush}}"
                             Margin="0,0,6,0"/>
                        <TextBlock Text="Complete" VerticalAlignment="Center" FontSize="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Ellipse Width="16" Height="16" 
                             Fill="{Binding Data.ToPresetBags, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StateToBrush}}"
                             Margin="0,0,6,0"/>
                        <TextBlock Text="To preset bags" VerticalAlignment="Center" FontSize="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Ellipse Width="16" Height="16" 
                             Fill="{Binding Data.DataWillOver, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StateToBrush}}"
                             Margin="0,0,6,0"/>
                        <TextBlock Text="Data will over" VerticalAlignment="Center" FontSize="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Ellipse Width="16" Height="16" 
                             Fill="{Binding Data.EmptyScale, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StateToBrush}}"
                             Margin="0,0,6,0"/>
                        <TextBlock Text="Empty scale" VerticalAlignment="Center" FontSize="10"/>
                    </StackPanel>

                </StackPanel>
            </Grid>
            
            <!-- Row 3: Barcode -->
            <Grid Grid.Row="3" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Bar code:" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox Grid.Column="1" Text="{Binding Data.Barcode, RelativeSource={RelativeSource AncestorType=UserControl}}" Height="24" FontSize="10" Padding="6,4" 
                         IsReadOnly="True" Background="White"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>

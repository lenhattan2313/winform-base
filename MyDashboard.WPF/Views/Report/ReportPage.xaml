<UserControl x:Class="MyDashboard.WPF.Views.Report.ReportPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MyDashboard.WPF.ViewModels"
             mc:Ignorable="d">
    <!-- DataContext will be set in code-behind using dependency injection -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Filter bar -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" Width="200" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="5" Style="{StaticResource ModernTextBoxStyle}" ToolTip="Search in title, description, or report type"/>
            <Button Grid.Column="1" Command="{Binding SearchCommand}" Width="100" Margin="5" Style="{StaticResource PrimaryButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Search"/>
                </StackPanel>
            </Button>
            <Button Grid.Column="2" Command="{Binding ClearFiltersCommand}" Width="120" Margin="5" HorizontalAlignment="Left" Style="{StaticResource SecondaryButtonStyle}">
                <TextBlock Text="Clear Search"/>
            </Button>
            <Button Grid.Column="3" Command="{Binding ExportToExcelCommand}" Width="130" Margin="5" HorizontalAlignment="Left" Style="{StaticResource PrimaryButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Export"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Production Data Table -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Reports}" AutoGenerateColumns="False" Margin="10" Style="{StaticResource ModernDataGridStyle}" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tare" Binding="{Binding Tare}" Width="60"/>
                <DataGridTextColumn Header="Net" Binding="{Binding Net}" Width="80"/>
                <DataGridTextColumn Header="PauseNet" Binding="{Binding PauseNet}" Width="80"/>
                <DataGridTextColumn Header="Gross" Binding="{Binding Gross}" Width="60"/>
                <DataGridTextColumn Header="Target" Binding="{Binding Target}" Width="80"/>
                <DataGridTextColumn Header="RecheckedWT" Binding="{Binding RecheckedWT}" Width="100"/>
                <DataGridTextColumn Header="Remains" Binding="{Binding Remains}" Width="80"/>
                <DataGridTextColumn Header="StartWT" Binding="{Binding StartWT}" Width="80"/>
                <DataGridTextColumn Header="TotalWT" Binding="{Binding TotalWT}" Width="80"/>
                <DataGridTextColumn Header="StartBags" Binding="{Binding StartBags}" Width="80"/>
                <DataGridTextColumn Header="TotalBags" Binding="{Binding TotalBags}" Width="80"/>
                <DataGridTextColumn Header="SiloName" Binding="{Binding SiloName}" Width="100"/>
                <DataGridTextColumn Header="EndTime" Binding="{Binding EndTime}" Width="120"/>
                <DataGridTextColumn Header="Shift" Binding="{Binding Shift}" Width="60"/>
                <DataGridTextColumn Header="ScaleNo" Binding="{Binding ScaleNo}" Width="70"/>
                <DataGridTextColumn Header="ScaleName" Binding="{Binding ScaleName}" Width="80"/>
                <DataGridTextColumn Header="GroupName" Binding="{Binding GroupName}" Width="100"/>
                <DataGridTextColumn Header="ScaleType" Binding="{Binding ScaleType}" Width="80"/>
                <DataGridTextColumn Header="Operator" Binding="{Binding Operator}" Width="200"/>
                <DataGridTextColumn Header="Spare_Ch1" Binding="{Binding Spare_Ch1}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

<UserControl x:Class="MyDashboard.WPF.Views.Report.ReportPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MyDashboard.WPF.ViewModels"
             mc:Ignorable="d">
    <!-- DataContext will be set in code-behind using dependency injection -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Filter bar -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Station Filter with Label -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5">
                <TextBlock Text="Station:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                <ComboBox Width="100" ItemsSource="{Binding Stations}" SelectedItem="{Binding SelectedStation}" Style="{StaticResource ModernComboBoxStyle}" ToolTip="Filter by Station"/>
            </StackPanel>
            
            <!-- Date Filter with Label -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5">
                <TextBlock Text="From Date:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                <DatePicker SelectedDate="{Binding FromDateFilter}" Width="150" Style="{StaticResource ModernDatePickerStyle}" ToolTip="Filter from this date"/>
            </StackPanel>
            
            <!-- To Date Filter with Label -->
            <StackPanel Grid.Column="2" Orientation="Vertical" Margin="5">
                <TextBlock Text="To Date:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                <DatePicker SelectedDate="{Binding ToDateFilter}" Width="150" Style="{StaticResource ModernDatePickerStyle}" ToolTip="Filter to this date"/>
            </StackPanel>
            
            <!-- Search Button -->
            <Button Grid.Column="3" Command="{Binding SearchCommand}" Width="100" Margin="5" VerticalAlignment="Bottom" Style="{StaticResource PrimaryButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Search"/>
                </StackPanel>
            </Button>
            
            <!-- Export Button -->
            <Button Grid.Column="4" Command="{Binding ExportToExcelCommand}" Width="100" Margin="5" VerticalAlignment="Bottom" Style="{StaticResource PrimaryButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Export"/>
                </StackPanel>
            </Button>
            
            <!-- Clear Filters Button (moved to right) -->
            <Button Grid.Column="6" Command="{Binding ClearFiltersCommand}" Width="120" Margin="5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Style="{StaticResource SecondaryButtonStyle}">
                <TextBlock Text="Clear Filters"/>
            </Button>
        </Grid>

        <!-- Production Data Table -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Reports}" AutoGenerateColumns="False" Margin="10" Style="{StaticResource ModernDataGridStyle}" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Station" Binding="{Binding StationDisplay}" Width="80"/>
                <DataGridTextColumn Header="Tare" Binding="{Binding Tare}" Width="60"/>
                <DataGridTextColumn Header="Net" Binding="{Binding Net}" Width="80"/>
                <DataGridTextColumn Header="PauseNet" Binding="{Binding PauseNet}" Width="80"/>
                <DataGridTextColumn Header="Gross" Binding="{Binding Gross}" Width="60"/>
                <DataGridTextColumn Header="Target" Binding="{Binding Target}" Width="80"/>
                <DataGridTextColumn Header="RecheckedWT" Binding="{Binding RecheckedWT}" Width="100"/>
                <DataGridTextColumn Header="Remains" Binding="{Binding Remains}" Width="80"/>
                <DataGridTextColumn Header="StartWT" Binding="{Binding StartWT}" Width="80"/>
                <DataGridTextColumn Header="TotalWT" Binding="{Binding TotalWT}" Width="80"/>
                <DataGridTextColumn Header="StartBags" Binding="{Binding StartBags}" Width="80"/>
                <DataGridTextColumn Header="TotalBags" Binding="{Binding TotalBags}" Width="80"/>
                <DataGridTextColumn Header="SiloName" Binding="{Binding SiloName}" Width="100"/>
                <DataGridTextColumn Header="EndTime" Binding="{Binding EndTime}" Width="120"/>
                <DataGridTextColumn Header="Shift" Binding="{Binding Shift}" Width="60"/>
                <DataGridTextColumn Header="ScaleNo" Binding="{Binding ScaleNo}" Width="70"/>
                <DataGridTextColumn Header="ScaleName" Binding="{Binding ScaleName}" Width="80"/>
                <DataGridTextColumn Header="GroupName" Binding="{Binding GroupName}" Width="100"/>
                <DataGridTextColumn Header="ScaleType" Binding="{Binding ScaleType}" Width="80"/>
                <DataGridTextColumn Header="Operator" Binding="{Binding Operator}" Width="200"/>
                <DataGridTextColumn Header="Spare_Ch1" Binding="{Binding Spare_Ch1}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

<UserControl x:Class="MyDashboard.WPF.Views.Alarm.AlarmPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MyDashboard.WPF.ViewModels"
             mc:Ignorable="d">
    <!-- DataContext will be set in code-behind using dependency injection -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Filter bar -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Line Filter with Label -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5">
                <TextBlock Text="Line:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                <ComboBox Width="100" ItemsSource="{Binding Lines}" SelectedItem="{Binding SelectedLine}" Style="{StaticResource ModernComboBoxStyle}" ToolTip="Filter by Line"/>
            </StackPanel>
            
            <!-- From Date Filter with Label -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5">
                <TextBlock Text="From Date:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                <DatePicker SelectedDate="{Binding FromDate}" Width="150" Style="{StaticResource ModernDatePickerStyle}" ToolTip="Filter from this date"/>
            </StackPanel>
            
            <!-- To Date Filter with Label -->
            <StackPanel Grid.Column="2" Orientation="Vertical" Margin="5">
                <TextBlock Text="To Date:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                <DatePicker SelectedDate="{Binding ToDate}" Width="150" Style="{StaticResource ModernDatePickerStyle}" ToolTip="Filter to this date"/>
            </StackPanel>
            
            <!-- Search Button -->
            <Button Grid.Column="3" Command="{Binding SearchCommand}" Width="100" Margin="5" VerticalAlignment="Bottom" Style="{StaticResource PrimaryButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Search"/>
                </StackPanel>
            </Button>
            
            <!-- Clear Filters Button (moved to right) -->
            <Button Grid.Column="5" Command="{Binding ClearFiltersCommand}" Width="120" Margin="5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Style="{StaticResource SecondaryButtonStyle}">
                <TextBlock Text="Clear Filters"/>
            </Button>
        </Grid>

        <!-- Table -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Alarms}" AutoGenerateColumns="False" Margin="10" Style="{StaticResource ModernDataGridStyle}" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date/Time" Binding="{Binding DateTime, StringFormat='yyyy-MM-dd HH:mm:ss'}" Width="150"/>
                <DataGridTextColumn Header="Line" Binding="{Binding Line}" Width="80"/>
                <DataGridTextColumn Header="Alarm Message" Binding="{Binding Message}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

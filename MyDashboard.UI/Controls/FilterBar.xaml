<UserControl x:Class="MyDashboard.UI.Controls.FilterBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="60" Background="White">
    
    <Border Background="White" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Line Filter -->
            <Label Grid.Column="0" Content="Line:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox Name="cboLine" Grid.Column="1" Width="100" Height="30" 
                      VerticalAlignment="Center" Margin="0,0,20,0">
                <ComboBoxItem Content="All" IsSelected="True"/>
                <ComboBoxItem Content="Line1"/>
                <ComboBoxItem Content="Line2"/>
            </ComboBox>
            
            <!-- Date From -->
            <Label Grid.Column="2" Content="From:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker Name="dtFrom" Grid.Column="3" Width="120" Height="30" 
                        VerticalAlignment="Center" Margin="0,0,20,0"/>
            
            <!-- Date To -->
            <Label Grid.Column="4" Content="To:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker Name="dtTo" Grid.Column="5" Width="120" Height="30" 
                        VerticalAlignment="Center" Margin="0,0,20,0"/>
            
            <!-- Search Text -->
            <Label Grid.Column="6" Content="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Name="txtSearch" Grid.Column="7" Width="150" Height="30" 
                     VerticalAlignment="Center" Margin="0,0,10,0"/>
            
            <!-- Search Button -->
            <Button Name="btnSearch" Grid.Column="8" Content="Search" Width="80" Height="30"
                    VerticalAlignment="Center" Click="BtnSearch_Click"
                    Background="#3498DB" Foreground="White" BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="4" 
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2980B9"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#21618C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>
